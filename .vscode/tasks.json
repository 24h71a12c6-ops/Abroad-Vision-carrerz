{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Backend: start",
			"type": "shell",
			"command": "npm",
			"args": [
				"--prefix",
				"backend",
				"start"
			],
			"isBackground": true,
			"problemMatcher": {
				"owner": "custom",
				"pattern": [
					{
						"regexp": "^(\\S.*):(\\d+):(.*)$",
						"file": 1,
						"line": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "node server\\.js",
					"endsPattern": "Ready to receive registrations"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": false
			},
			"group": "build"
		}
	]
}